
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h1>Index</h1>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Caregories</h4>
                <div class="col-lg-12">
                    <a class="btn btn-success" asp-action="Create">Create Category</a>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @ct.Name
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@ct.Id">
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@ct.Id">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>